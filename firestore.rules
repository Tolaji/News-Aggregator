rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own user document and subcollections
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Users can manage their own savedArticles
      match /savedArticles/{articleId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Allow user to set bookmarks
      match /bookmarks/{bookmarkId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      // Users can manage their own preferences
      match /preferences/{preferenceId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Authenticated users can read articles (but no one can write)
    match /articles/{articleId} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write
    }
  }
}